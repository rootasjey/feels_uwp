<Application
    x:Class="Feels.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedTheme="Light"
    xmlns:converters="using:Feels.Converters">

    <Application.Resources>
        <converters:WeatherIcon x:Name="WeatherIcon"/>
        <converters:SimpleTemperature x:Name="SimpleTemperature"/>
        <converters:TimeParser x:Name="TimeParser"/>
        <converters:LocalizedDay x:Name="LocalizedDay"/>
        <converters:LocationSelectedIcon x:Name="LocationSelectedIcon"/>

        <Style x:Key="ListViewItemFill" TargetType="ListViewItem">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        </Style>
    </Application.Resources>
</Application>
